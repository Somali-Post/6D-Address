{
    "compilerOptions": {
      "target": "ES2016", // Or newer like ES2020
      "module": "CommonJS", // Node.js uses CommonJS by default
      "outDir": "./dist", // Where compiled JS will go
      "rootDir": "./src", // Where your TS source code is
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
       "sourceMap": true, // Optional: for debugging
    },
    "include": ["src/**/*"], // Only compile files in src
    "exclude": ["node_modules"]
  }